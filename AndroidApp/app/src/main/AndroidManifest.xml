<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zionjr.policeticket">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PoliceTicket">
        <activity android:name=".section_driver.activities.ShowTicketActivity"></activity>
        <activity android:name=".section_driver.activities.ShowTicketsActivity" />
        <activity android:name=".section_policeman.activities.ShowIssuedTicketsActivity" />
        <activity android:name=".section_policeman.activities.ShowTicketActivityPolice" />
        <activity android:name=".section_policeman.activities.IssueTicketActivity" />
        <activity android:name=".section_policeman.activities.ShowDriverDetailsActivity" />
        <activity android:name=".section_policeman.activities.ScanPlateNumberAsPoliceActivity" />
        <activity android:name=".section_policeman.activities.ScanLicenseAsPoliceActivity" />
        <activity android:name=".activities.CollectionCentersActivity" />
        <activity android:name=".activities.PenaltyRulesActivity" />
        <activity android:name=".section_driver.activities.ScanLicenseActivity" />
        <activity android:name=".section_driver.activities.SignupActivity" />
        <activity android:name=".section_driver.activities.LoginActivity" />
        <activity android:name=".activities.UserSelectionActivity" />
        <activity android:name=".section_driver.activities.DashboardActivity" />
        <activity android:name=".section_policeman.activities.DashboardActivity" />
        <activity android:name=".section_policeman.activities.LoginActivity" />
        <activity android:name=".section_policeman.activities.SignupActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
    </application>

</manifest>